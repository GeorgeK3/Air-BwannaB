<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/roomImageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_placeholder_image" />

    <TextView
        android:id="@+id/roomNameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Room Name"
        android:textSize="16sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/noOfPersonsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. of Persons" />

    <TextView
        android:id="@+id/areaTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Area" />

    <TextView
        android:id="@+id/starsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Stars" />

    <TextView
        android:id="@+id/noOfReviewsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="No. of Reviews" />

    <TextView
        android:id="@+id/availabilityTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <TextView
        android:id="@+id/priceTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>